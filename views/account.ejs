<div  class="container" id="welcome">
    <form class="row align-items-center flex-column" action="#" method="POST">
        <h1>Sign in</h1>
        <div class="col-sm-6">
            <% if (messages.error) { %><p class="text-danger"><%= messages.error %></p><% } %>
            <div class="row form-group">
                <label for="email">Email:</label>
                <input class="form-control" type="email" name="email" id="email">
            </div>
            <div class="row form-group">
                <label for="password">Password:</label>
                <input class="form-control" type="password" name="password" id="password">
            </div>
            <div class="row mt-4 form-group justify-content-around">
                <input class="btn-warning btn" type="submit" value="Sing-in"><br>
                <a class="btn btn-primary" href="guest">Sign-up</a>
            </div>
        </div>
    </form>
</div>