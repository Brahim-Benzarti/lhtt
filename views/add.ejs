<div class="container" id="welcome">
    <form class="row justify-content-center" action="#" method="POST">
        <div class="col">
            <div class="form-group row">
                <div class="col-sm-4">
                    <label for="title">Title: </label>
                    <input class="form-control" type="text" name="title" id="title">
                </div>
            </div>
            <div class="form-group mb-4">
                <label for="content">Content: </label>
                <textarea class="form-control" type="text" name="content" id="content" rows="5"></textarea>
            </div>
            <div class="row mt-4 justify-content-center">
                <div class="col-sm-4 d-flex justify-content-around">
                    <input class="btn btn-danger" type="reset" value="Reset">
                    <input class="btn btn-warning" type="submit" value="Add">
                </div>
            </div>
        </div>
    </form>
</div>
